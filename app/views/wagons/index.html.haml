#notice= notice

%h1= link_to "Train #{@train.number}", @train

%h2 Wagons
%table
  %thead
    %tr
      %th Number:
      %th{:colspan => '3'}
  %tbody
    -@wagons.each do |wagon|
      = render 'wagon', wagon: wagon
%br

= link_to 'Back', train_wagons_path(@train)
= link_to 'New wagon', new_train_wagon_path(train_id: @train)
